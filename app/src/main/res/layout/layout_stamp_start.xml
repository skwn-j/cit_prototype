<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_test_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/training_bg"
        android:gravity="center"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:lineSpacingExtra="13sp"
            android:text="엘리트 스탬프 발급!"
            android:textColor="#4f4f4f"
            android:layout_marginTop="30dp"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageview_dialog_addimage"
            android:layout_width="200dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_dialog"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/img_badge" />

        <TextView
            android:id="@+id/text_dialog_addimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:layout_below="@+id/imageview_dialog_addimage"
            android:lineSpacingExtra="13sp"
            android:text="@string/string_elite_step1"
            android:textColor="#4f4f4f"
            android:layout_marginTop="30dp"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>
