<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/training_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_test_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="STAGE 02"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_test_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/img_close_selector" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8dp"
        android:text="지금 말한 이 단어가 맞는가?"
        android:textColor="#FF4F4F4F"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_input_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:lineSpacingExtra="-24sp"
        android:textColor="#49dc90"
        android:textSize="30sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-13sp"
        android:text="맞다면 확인 버튼을 눌러주개나"
        android:textColor="#FF4F4F4F"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/imageview_input_voice"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="160dp"
            android:background="@drawable/img_ok_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageview_input_voice"
            android:layout_alignEnd="@+id/imageview_input_voice"
            android:layout_alignStart="@+id/imageview_input_voice"
            android:layout_alignTop="@+id/imageview_input_voice"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="확인"
            android:textColor="#FFFFFFFF"
            android:textSize="22sp" />
    </RelativeLayout>


</LinearLayout>